<resources>

    <!-- Base application theme. -->
    <style name="Base.Theme.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields e.g. FloatActionButton -->
        <item name="colorAccent">@color/color_accent</item>

        <!-- Title Text Color -->
        <item name="android:textColorPrimary">@color/color_text_primary</item>

        <!-- color of the menu overflow icon (three vertical dots) -->
        <item name="android:textColorSecondary">@color/color_text_secondary</item>

        <!--Change color of DrawerToggle in toolbar-->
        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle</item>


    </style>

    <style name="MyDrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="ToolBarFeedTitle" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
    </style>


    <style name="AppTheme" parent="Base.Theme.AppTheme">
    </style>

</resources>
